<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp">
    
  <RelativeLayout
        android:id="@+id/tab1_7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
		android:background="@drawable/list_item_bg1"
		android:focusable="true"
        >
        
            
        <ImageView
			android:layout_width="35dp"
		    android:layout_height="60dp"
		    android:src="@drawable/user_default" 
            android:layout_marginLeft="10dp"
         />
      
          <TextView
              android:id="@+id/tab1_tv1"
            android:textColor="@color/font_style_colors"      
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="登陆/注册" 
            />   
    </RelativeLayout>
     <LinearLayout  
        android:id="@+id/tab1_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/menu_icon_sortbyartist_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="本地歌曲"
          />
        
    </LinearLayout>
    
      <LinearLayout  
        android:id="@+id/tab1_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/menu_icon_delete_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="我的收藏"
          />
        
    </LinearLayout>
    
       <LinearLayout  
        android:id="@+id/tab1_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/menu_icon_download_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="我的下载"
          />
        
    </LinearLayout>
    
        <LinearLayout  
        android:id="@+id/tab1_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/mv_mute_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="最近播放"
          />
        
    </LinearLayout>
    
         <LinearLayout  
        android:id="@+id/tab1_5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/menu_icon_favorite_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="歌手列表"
          />
        
    </LinearLayout>
    
       <LinearLayout  
        android:id="@+id/tab1_6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/list_item_bg">
        
          <ImageView
		 android:layout_width="35dp"
         android:layout_height="25dp"
         android:layout_gravity="center_vertical"
         android:src="@drawable/modeorder_pressed" 
         />
          
        <TextView 
            android:textColor="@color/font_style_colors"  
            android:focusable="true"   
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="默认列表"
          />
        
        </LinearLayout>
</LinearLayout>
</ScrollView>